                    }
                },
                {
                    "name": "Update Product",
                    "request": {
                        "method": "PUT",
                        "header": [
                            { "key": "Content-Type", "value": "application/json" },
                            { "key": "Authorization", "value": "Bearer {{token}}" }
                        ],
                        "body": { "mode": "raw", "raw": "{\n  \"price\": 52000,\n  \"stock\": 8\n}" },
                        "url": { "raw": "http://localhost:5000/products/{{productId}}", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["products", "{{productId}}"] }
                    }
                },
                {
                    "name": "Delete Product",
                    "request": {
                        "method": "DELETE",
                        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
                        "url": { "raw": "http://localhost:5000/products/{{productId}}", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["products", "{{productId}}"] }
                    }
                }
            ]
        },
